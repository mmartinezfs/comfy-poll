<%= link_to 'Create New Poll', new_admin_poll_question_path, :class => 'big button' %>

<h1> Poll Questions </h1>

<table class='formatted'>
  <tr>
    <th>Title</th>
    <th>Question</th>
    <th></th>
  </tr>
  <% @questions.each do |question| %>
    <tr>
      <td>
        <%= question.label %>
      </td>
      <td class='main'>
        <%= question.content.truncate(100) %>
      </td>
      <td class='action_links'>
        <%= link_to 'Results', admin_poll_question_path(question) %>
        <%= link_to 'Edit', edit_admin_poll_question_path(question) %>
        <%= link_to 'Delete', admin_poll_question_path(question), :method => :delete, :confirm => 'Are you sure?' %>
      </td>
    </tr>
  <% end %>
</table>